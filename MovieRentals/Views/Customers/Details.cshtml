@model MovieRentals.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>CustomerID: @Model.Id</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
    }
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.IsSubscribedToNewsletter == true)
    {
        <li>@Model.Name  is a Subscriber</li>
    }
    else
    {
        <li>@Model.Name  is not Subscribed to Newsletter</li>
    }

</ul>
